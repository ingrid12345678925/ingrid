{% comment %}
Seção principal da loja Ingrid Total Lokke
{% endcomment %}

<div class="container">
  <h1 class="page-title">Ingrid Total Lokke</h1>
  <div class="product-grid">
    {% for product in collections['vestuario'].products %}
      <div class="product-card">
        <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
        <h2>{{ product.title }}</h2>
        <p class="price">{{ product.price | money }}</p>
        <a href="{{ product.url }}" class="buy-button">Comprar</a>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.container {
  text-align: center;
  padding: 20px;
}
.page-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 20px;
}
.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
}
.product-card {
  border: 1px solid #ddd;
  padding: 15px;
  border-radius: 10px;
  background: #fff;
}
.buy-button {
  display: inline-block;
  padding: 10px;
  background: #000;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
}
</style>
